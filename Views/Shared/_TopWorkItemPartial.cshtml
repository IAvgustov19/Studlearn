@model SW.Frontend.Models.TopWork

<div class="blog-post-sm bordered blog-container top-work">
    <div class="blog-img-thumb">
        <a href="@Model.Url">
            @if (string.IsNullOrWhiteSpace(Model.YoutubeId))
            {
                <img src="@Model.ImageUrlQuality" alt="@Model.Title"
                     title="@Model.Title">
            }
            else
            {
                <iframe width="100%" height="100%"
                        src="https://www.youtube.com/embed/@Model.YoutubeId"
                        frameborder="0" allowfullscreen></iframe>
            }

        </a>
        <div class="blog-tags blog-price">
            <ul>
                <li>
                    <a href="@Model.DownloadOrBuyUrl"
                       title="@(Model.Price.HasValue ? "Купить работу" : "Скачать бесплатно")">
                        <i class="fa @SW.Shared.Constants.Application.DefaultCurrencyIconClass"></i>
                        @Model.PriceLabel
                    </a>
                </li>
                @if (Model.Author != null && !string.IsNullOrEmpty(Model.Author.Id))
                {
                    <li>
                        <a href="@Model.Author.ProfileUrl" title="Перейти на профиль автора">
                            <i class="fa fa-user-circle"></i>
                            @Model.Author.UserName
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="blog-post-content">
        <h2 class="blog-title blog-post-title">
            <a href="@Model.Url" title="@Model.Title">@Model.Title</a>
        </h2>

        <div class="blog-post-desc" style="max-height: 60px; overflow: hidden; margin-bottom: 0px;">
            @Model.BriefDescription
        </div>
        <br />
        <div class="blog-post-foot">
            <div class="blog-post-meta" style="font-size:1.25em;">
                <i class="fa fa-eye"></i>@Model.Visits
            </div>
            <span class="pull-right" style="font-size:1.25em;">
                <i class="fa fa-star"></i>
                @Model.Rating
            </span>
        </div>
    </div>
</div>