@model SW.Shared.Models.Documents.DocumentSalePreview

@{
    Layout = "~/Views/Emails/_Layout.cshtml";
}

<!--content 1 -->
@section Content {
    <tr>
        <td align="center" bgcolor="#fbfcfd">
            <table width="90%" border="0" cellspacing="0" cellpadding="0">
                <tbody>
                    <tr>
                        <td align="center">
                            <!-- padding --><div style="height: 60px; line-height: 60px; font-size: 10px;">&nbsp;</div>
                            <div style="line-height: 44px;">
                                <font face="Arial, Helvetica, sans-serif" size="5" color="#57697e" style="font-size: 34px;">
                                    <span style="font-family: Arial, Helvetica, sans-serif; font-size: 34px; color: #57697e;">
                                        @SW.Resources.Frontend.Mail.NewSaleEmailHeader
                                    </span>
                                </font>
                            </div>
                            <!-- padding --><div style="height: 40px; line-height: 40px; font-size: 10px;">&nbsp;</div>
                        </td>
                    </tr>
                    <tr>
                        <td align="center">
                            <div style="line-height: 24px;">
                                <font face="Arial, Helvetica, sans-serif" size="4" color="#57697e" style="font-size: 15px;">
                                    <span style="font-family: Arial, Helvetica, sans-serif; font-size: 15px; color: #57697e;">
                                        @Html.Raw(String.Format(@SW.Resources.Frontend.Mail.NewSaleEmailBody, "<b>P " + (Model.Income-Model.Fee).ToString("N") + "</b>", "<b>" + Model.DocumentTitle + "</b>"))
                                    </span>
                                </font>
                            </div>
                            <!-- padding --><div style="height: 40px; line-height: 40px; font-size: 10px;">&nbsp;</div>
                        </td>
                    </tr>
                    <tr>
                        <td align="center">
                            <div style="line-height: 24px;">
                                <a href="#" target="_blank" style="color: #596167; font-family: Arial, Helvetica, sans-serif; font-size: 13px;">
                                    <font face="Arial, Helvetica, sans-seri; font-size: 13px;" size="3" color="#596167">
                                        @SW.Resources.Frontend.Mail.EmailGoToSite
                                    </font>
                                </a>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </td>
    </tr>
}