@{
    ViewBag.Title = "Система Рейтингов И Бонусов | Studlearn.com";
    ViewBag.Description = "Авторы, которые загружают свои работы могут получить привилегии за свою деятельность. Их действия влияют на результаты выдачи во внутреннем поиске сайта.";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PreHeader{
    <div class="pre-header">
        <div class="container">
            <div class="row">
