<div class="container">
    @Html.Partial("~/Views/Shared/CallToAction/_StudlearnInNumbers.cshtml")
    <h2><a href="@Url.Action("Free", "TopWorks")">@General.HomeFeaturedFree</a></h2>
    <div class="row recent-work margin-bottom-40">
        @foreach (var work in Model.FeaturedFreeWorks)
        {
            <div class="col-md-2  col-sm-4  col-xs-6">
                @Html.Partial("Featured/_FeaturedWorkPartial", work)
            </div>
        }
    </div>
    <h2><a href="@Url.Action("Paid", "TopWorks")">@General.HomeFeaturedPaid</a></h2>
    <div class="row recent-work margin-bottom-40">
        @foreach (var work in Model.FeaturedPayedWorks)
        {
            <div class="col-md-2  col-sm-4  col-xs-6">
                @Html.Partial("Featured/_FeaturedWorkPartial", work)
            </div>
        }
    </div>
    <h2><a href="@Url.Action("Index", "Authors")">@General.HomeFeaturedAuthors</a></h2>
    <div class="row recent-work margin-bottom-40">
        @foreach (var author in Model.FeaturedAuthors)
        {
            <div class="col-md-2  col-sm-4  col-xs-6">
                @Html.Partial("Featured/_FeaturedAuthorPartial", author)
            </div>
        }
    </div>
    <h2><a href="@Url.Action("Recent", "TopWorks")">@General.HomeFeaturedNew</a></h2>
    <div class="row recent-work margin-bottom-40">
        @foreach (var work in Model.RecentWorks)
        {
            <div class="col-md-2  col-sm-4  col-xs-6">
                @Html.Partial("Featured/_FeaturedWorkPartial", work)
            </div>
        }
    </div>


    @*  @Html.Partial("CallToAction/_AuthorRegistration")*@
</div>

