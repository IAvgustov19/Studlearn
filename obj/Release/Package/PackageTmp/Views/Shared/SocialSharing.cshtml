@model SW.Frontend.Models.SocialData
@{
    string u = Request.Url.AbsoluteUri;
    Model.UrlNormalization();
}
<ul class="social-icons social-icons-color">
    <li>
        <a rel="nofollow" href="http://vk.com/share.php?url=@u&title=@Model.Title&description=@Model.Description.Substring(0, Model.Description.Length > 300 ? 300 : Model.Description.Length)&image=@Model.Image"
           title="vk" class="vk"></a>
    </li>
    <li>
        <a rel="nofollow" href="http://www.facebook.com/sharer.php?u=@u"
           title="Facebook" class="facebook"></a>
    </li>
    <li>
        <a rel="nofollow" href="http://twitter.com/share?url=@u&text=@Model.Title"
           title="twitter" class="twitter"></a>
    </li>
